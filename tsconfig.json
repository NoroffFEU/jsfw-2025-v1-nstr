{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vitest", "jest", "node"],
    "allowImportingTsExtensions": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
